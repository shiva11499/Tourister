<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_azimuth"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/img_compass"
        android:layout_marginEnd="26dp"
        android:paddingTop="9dp"
        android:text="0Â°"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="13sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_compass"
        android:layout_width="73dp"
        android:layout_height="73dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/dial" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_above="@+id/txt_azimuth"
        android:layout_alignParentStart="true"
        android:background="#FFBFC8FA"
        android:fontFamily="@font/allerta_stencil"
        android:gravity="center"
        android:padding="12dp"
        android:text="JUNAGARH FORT"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="186dp"
        android:background="#FFE6B844"
        android:fontFamily="@font/allerta_stencil"
        android:gravity="center"
        android:padding="25dp"
        android:text="SUBSITE I"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:text="You are at"
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/textView2"
        app:srcCompat="@drawable/ic_bookmark_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/fab1"
        android:layout_marginStart="26dp"
        android:foregroundGravity="bottom|left"
        app:floating_background_color="@color/cardview_light_background"
        app:floating_left_icon="@drawable/ic_open_with_black_24dp"
        app:floating_title="Open TOUR" />

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_azimuth"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:foregroundGravity="bottom|right"
        app:floating_background_color="@color/cardview_light_background"
        app:floating_left_icon="@drawable/ic_tag_faces_black_24dp"
        app:floating_title="Guided TOUR" />

    <Button
        android:id="@+id/addon"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="#f9f9f9"
        android:text="+"
        android:textSize="30sp"
        android:layout_below="@+id/textView3" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="202dp"
        android:layout_height="184dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp"
        app:srcCompat="@drawable/ic_play_circle_filled_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:text="Long click on icon to get instant directions" />

</RelativeLayout>
